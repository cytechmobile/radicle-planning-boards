{
  "name": "radicle-planning-boards",
  "type": "module",
  "private": true,
  "license": "./LICENSE",
  "engines": {
    "npm": "^7",
    "node": ">=20.0.0"
  },
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "postinstall": "nuxt prepare",
    "verify-deps": "npx pnpm i --frozen-lockfile --prefer-offline",
    "dev": "npm run verify-deps && nuxt dev",
    "build": "nuxt build",
    "preview": "nuxt preview",
    "lint": "eslint . --max-warnings 0 --no-warn-ignored --cache --cache-location node_modules/.cache/eslint"
  },
  "dependencies": {
    "@iconify/json": "^2.2.142",
    "@nuxt/ui": "^2.10.0",
    "@pinia/nuxt": "^0.5.1",
    "@vueuse/nuxt": "^10.6.1",
    "nuxt-icon": "^0.6.6"
  },
  "devDependencies": {
    "@maninak/eslint-config": "^0.1.0",
    "@nuxt/devtools": "^1.0.2",
    "nuxt": "^3.8.1",
    "typescript": "^5.2.2",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix --max-warnings 0 --no-warn-ignored --cache --cache-location node_modules/.cache/eslint"
  }
}
